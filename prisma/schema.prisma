generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model messageModel {
  id        Int     @id @default(autoincrement())
  message_text  String  @db.VarChar(120)
  user_id  String @unique @db.Char(36)
  timestamp_sent DateTime @db.Timestamp()
  user_alias String @db.VarChar(20)
  session_state String @default("active") @db.VarChar(20)
  @@map("tbchat")
}
