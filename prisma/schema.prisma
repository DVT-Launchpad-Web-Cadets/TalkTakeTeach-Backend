generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model messageModel {
  id        Int     @id @default(autoincrement())
  messageText  String  @db.VarChar(120)
  userId  String @unique @db.Char(36)
  timestampSent DateTime  @default(now()) @db.Timestamptz(3)
  sessionState String @default("active") @db.VarChar(20)
  @@map("tbchat")
}
